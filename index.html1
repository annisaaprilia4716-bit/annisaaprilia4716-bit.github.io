script_js = """// Annisa Dress ‚Äî Interaktif
const $ = (s, p=document) => p.querySelector(s);
const $$ = (s, p=document) => [...p.querySelectorAll(s)];

const state = {
  products: [
    {
      id: 'A01',
      name: 'Dress Aulia Pastel Pink',
      color: 'Pink Pastel',
